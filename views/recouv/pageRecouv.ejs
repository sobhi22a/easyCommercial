      document.getElementById('pageHistoryRecouv').hidden = true
      document.getElementById('pageNvClientRecou').hidden = true
      // document.getElementById("pageCallCenter").hidden=true
    }
    function pageExcellentClient() {
      getListClientExcellent()
      document.getElementById("demandeDebloque").classList.remove("active");
      document.getElementById("historyRecouv").classList.remove("active");
      document.getElementById("nouveauClient").classList.remove("active");
      document.getElementById("suiviBonRoute").classList.remove("active");
      document.getElementById("pageExcellentClient").classList.add("active");

      document.getElementById('pageExcellentClientHidden').hidden = false
