      document.getElementById('pageRecouverement').hidden = true
      document.getElementById('pageHistoryRecouv').hidden = true
      document.getElementById('pageNvClientRecou').hidden = true
      // document.getElementById("pageCallCenter").hidden=true
    }

    function showToast(color, icon, status, message) {
      var x = document.getElementById("snackbar");
      document.getElementById("statusToast").innerText = status
      document.getElementById("messageToast").innerText = message
      document.getElementById("iconToast").classList.add(icon)
      x.style.color = color
      x.className = "show";
      setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
    }
  </script>
